---
interface Props {
	date: Date;
}

const { date } = Astro.props;
const parsedDate = new Date(date);
console.log(date, parsedDate)
---

<time datetime={parsedDate.toISOString()}>
	{
		parsedDate.toLocaleDateString('kr-ko', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
